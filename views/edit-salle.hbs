    <label  class="form-label">salle</label>
    <input type="text" class="form-control" name = "name" value="{{this.name}}" >
    </div>
    <div class="col-md-6">
    <label class="form-label">bloc</label>
    <input type="text" class="form-control" name="bloc" value="{{this.bloc}}">
