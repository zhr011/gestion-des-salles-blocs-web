  </thead>
  <tbody>
    {{#each blocs}}
    <tr class="text-center">
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td class="text-center">
          <a href="/editbloc/{{this.id}}" type="button" class="btn btn-success btn-small"> <i class="bi bi-pencil"> </i> Edit </a>
